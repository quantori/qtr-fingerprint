pipeline {
  agent {
    docker {
      image 'rikorose/gcc-cmake:latest'
      label 'qtr'
    }
  }
  stages {
    stage('build') {
      steps {
        sh '''
          cd cpp
          mkdir build && cd build
          cmake ..
          cmake --build .
        '''
      }
    }
    stage('test') {
      steps {
        sh '''
          cd cpp/build
          ./bin/tests
        '''
      }
    }
  }
  post {
    cleanup {
      deleteDir()
    }
  }
}
