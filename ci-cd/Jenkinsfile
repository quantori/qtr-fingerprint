pipeline {
  agent {
    docker {
      image 'rikorose/gcc-cmake:latest'
      label 'qtr'
    }
  }
  stages {
    stage('build') {
      steps {
        sh 'cd cpp'
        sh 'mkdir build && cd build'
        sh 'cmake ..'
        sh 'cmake --build .'
      }
    }
    stage('test') {
      steps {
        sh 'pwd'
        sh 'cd cpp/build'
        sh './bin/tests'
      }
    }
  }
  post {
    cleanup {
      deleteDir()
    }
  }
}
